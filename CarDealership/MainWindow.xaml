    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    
    <DockPanel>

        <Border BorderBrush="{StaticResource MaterialDesign.Brush.Primary.Dark}"

                Background="{StaticResource MaterialDesign.Brush.Primary}">
            <StackPanel Orientation="Vertical" Margin="4">

                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </StackPanel.Resources>

                <Button Click="ButtonFilterClick">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="FilterCog"/>
                    </Button.Content>
                </Button>

                <Button>
                    <Button.Content>
                        <materialDesign:PackIcon Kind="Account"/>
                    </Button.Content>
                </Button>

                <Button>
                    <Button.Content>
                        <materialDesign:PackIcon Kind="Basket"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>

